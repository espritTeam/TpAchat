pipeline {
    environment { 
        registry = "abdelwehed/achat" 
        registryCredential = 'dockerHub' 
        dockerImage = '' 
        NEXUS_VERSION = "nexus3"
        NEXUS_PROTOCAOL = "http"
        NEXUS_URL = "172.10.0.140:8081"
        NEXUS_REPOSITORY = "nexus-repo-devops"
        NEXUS_CREDENTIAL_ID = "deploymentRepo"
    }
    agent any
    
    stages {
        stage ('Checkout git') {
            steps {
                git branch: 'Abdelwehed' ,
                url:'https://github.com/espritTeam/TpAchat.git'
            }
        }
        stage ('Maven Clean') {
            steps {
                sh 'mvn clean'
            }
        }
        stage ('Maven Compile') {
            steps {
                sh 'mvn compile'
            }
        }
        stage ('Maven Package') {
            steps {
                sh 'mvn package'
            }
        }
        stage ('Unit Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage ('Maven SonarQube') {
            steps {
                    sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=abdousouid12'

            }
        }
        stage("PUBLISH TO NEXUS") {
            steps {  sh 'mvn deploy'
            }
        }

        stage('Building our image') { 
            steps { 
                script { 
                    dockerImage = docker.build registry + ":$BUILD_NUMBER" 
                }
            } 
        }
        stage('Deploy our image') { 
            steps { 
                script { 
                    docker.withRegistry( '', registryCredential ) { 
                        dockerImage.push() 
                    }
                } 
            }
        }

        stage("Docker compose") {
            steps {  sh 'docker-compose up'
            }
        }
    }
}
